<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @idea.name %>
</p>

<p>
  <b>Description:</b>
  <%= @idea.description %>
</p>

<p>
  <b>Picture:</b>
  <%= image_tag(@idea.picture_url, :width => 600) if @idea.picture.present? %>
</p>


<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>

<% @comments.each do |comment| %>
<p><%= comment.message %> [<%= link_to 'Remove', comment, confirm: 'Are you sure?', method: :delete %>]</p>
<% end %>


<p>
  <b>Add a new comment:</b>
</p>

<%= form_for(@comment) do |f| %>
   <%= f.hidden_field :idea_id %>

  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
